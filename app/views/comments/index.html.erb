<h1>Comments Index</h1>
<div class="comments">
  <div class="container">
    <% @comments.each do |comment| %>
      <div class="comment">
        <p class="content"><%= comment.content %></p>
        <p class="time"><%= comment.created_at %></p>
      </div>
    <% end %>
    <p>
      <%= link_to 'New Comment', "comments/new" %>
    </p>
  </div>
</div>
