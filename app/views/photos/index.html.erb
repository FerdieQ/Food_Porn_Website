<h1>Photo Index</h1>
<h2>
    <%= link_to 'Upload Photos', 'form', class: "btn btn-lg btn-primary" %>
</h2>

<div class="photos">
  <div class="container">
    <% @photos.each do |photo| %>
      <div class="row">
        <h1><div class="col-xs3"><%= photo.title %></div></h1>
        <div class="photo">
        <%= image_tag photo.image.url(:medium) %>
        </div>
      </div>

      <p>
        <%= link_to 'Delete', photo_path(photo), :method => :delete %>
      </p>

      <div class="col-xs3"><% photo.comments.each do |comment| %>
        <%=comment.content %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

